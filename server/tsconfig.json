{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "types": ["node", "express"],
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
